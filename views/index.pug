extends layout

block content
  
  div.wrap
  form.addTodo(
    action='/create' 
    method='post'
  )
    input.createTodo-input(
      type='text' 
      placeholder='What needs to be done?' 
      name='todo'
    )
    button.createTodoBtn(
      type='submit'
    ) + 
     
  br

  div.list
    for todo in todos
      ul
        li
          form.iscomplete(
            action=`/iscomplete/${todo.id}`
          )
            if todo.iscomplete
              button
                i.fa.fa-check(aria-hidden='true')
               
            else
              button
            
          form.todo-list(
            action=`/update/${todo.id}` 
            method='post'
          )
            if todo.iscomplete
              input.editTodo-input(
                type='text' 
                name='todo' 
                value=todo.todo
                readonly
              )
            else
              input.editTodo-input(
                type='text' 
                name='todo' 
                value=todo.todo    
              )
                
          a.trash(href='/delete/' + todo.id) 
            i.fa.fa-trash.fa-1x(aria-hidden='true')
